<Page x:Class="demo.Domain.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:demo.Domain.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Авторизация" FontSize="20" Margin="0,0,0,20" TextAlignment="Center" />
        <StackPanel Grid.Row="1" Width="200">
            <TextBox x:Name="LoginBox"/>
            <PasswordBox x:Name="PassBox" Margin="0,10,0,0"/>
            <Button Content="Войти" Click="OnLogin" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
